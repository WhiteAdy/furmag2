{% if heading_title %}
  <h3>{{ heading_title }}</h3>
{% endif %}
<!-- Swiper -->
<div class="product-carousel-arrows">
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>
<div class="swiper-container custom_product_carousel" id="{{ carousel_id }}">
    <div class="swiper-wrapper">
    {% for product in products %}
      <div class="swiper-slide">
        <a href="{{ product.href }}">
          <img data-src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="primary-img img-responsive swiper-lazy" />
          {% if product.secondary_image %}
            <img data-src="{{ product.secondary_image }}" alt="{{ product.name }}" title="{{ product.name }}" class="secondary-img img-responsive swiper-lazy" />
          {% endif %}
        </a>
        <div class="swiper-lazy-preloader swiper-lazy-preloader-white"></div>
        <a href="{{ product.href }}" class="swiper-product-title">
          <h4>{{ product.name }}</h4>
        </a>
        <button type="button" class="product-wishlist-btn" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fal fa-heart"></i></button>
        <div class="separator"></div>
        <div class="pricing-div">
          {% if product.special %}
            <h6 class="price-old">{{ product.price }}</h6>
            <h5 class="price-new">{{ product.special }}</h5>
          {% else %}
            <h5 class="price">{{ product.price }}</h5>
          {% endif %}
        </div>
          <button class="fancy-cta carousel-cart-btn" data-id="{{ product.product_id }}">Add to cart</button>
      </div>
    {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
</div>
<script>
  const carousel = document.getElementById('{{ carousel_id }}');
  carousel.addEventListener('click', (e) => {
    if(e.target.classList.contains('carousel-cart-btn')) {
      cart.add(e.target.dataset.id);
    }
  });
  $(document).ready(() => {
      var swiper2 = new Swiper('.custom_product_carousel', {
        lazy: {
          loadPrevNext: true,
          loadPrevNextAmount: 1
        },
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        slidesPerView: 2,
        spaceBetween: 5,
        navigation: {
          nextEl: '.product-carousel-arrows .swiper-button-next',
          prevEl: '.product-carousel-arrows .swiper-button-prev',
        },
        breakpoints: {
          600: {
            slidesPerView: 3,
            spaceBetween: 10,
        },
          800: {
            slidesPerView: 4,
            spaceBetween: 10,
        },
          1000: {
            slidesPerView: 5,
            spaceBetween: 10,
        },
          1300: {
            slidesPerView: 6,
            spaceBetween: 10,
        },
        }
      });
  });
</script>